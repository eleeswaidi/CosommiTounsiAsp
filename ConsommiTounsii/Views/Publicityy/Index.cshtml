@model IEnumerable<ConsommiTounsii.Models.Publicity>

@{
    ViewBag.Title = "Retrieve all publicity";
}

<h2>Retrieve all publicity</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.name_pub)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.name_pub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.name_prod)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.id_pub })|
                @Html.ActionLink("Edit", "Edit", new { id = item.id_pub }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_pub })
            </td>
        </tr>
    }

</table>
