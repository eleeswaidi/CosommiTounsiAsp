@model IEnumerable<ConsommiTounsii.Models.Subject>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <div>
                    Search: @Html.TextBox("searchString")
                </div>
            </td>
            <td>
                <input type="submit" value="Search" id="submit" />
            </td>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rating_subject)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desc_subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rating_subject)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_subject }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_subject }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_subject })
            </td>
        </tr>
    }

</table>